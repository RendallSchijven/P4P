@section scripts
{   
    <script>
        var options = [
            { selector: '#categories', offset: 600, callback: 'unhidecat()' },
        ];
        Materialize.scrollFire(options);

        function unhidecat() {
            $('#categories').animate({
                opacity: 1
            }, 500);
        };

    </script>

    <script type="text/javascript">

        $(document).ready(function () {
            $('body').hide(0).fadeIn(800);
            $('#categories').animate({
                opacity: 0
            }, 1);

            $('.aanbieding').animate({
                opacity: 0
            }, 1);
            $(".aanbieding").each(function (i) {
                $(this).delay(i * 400).animate({
                    opacity: 1
                }, 400);
            })
        });
    </script>
}
