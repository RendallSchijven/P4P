     </div>
</div>
    <header class="l-relative">
        <!--Gradient-->
        <div id="categories" class="background-grass gradient edited">
            <div id="recht">
                
                <center><h3>Categories</h3></center>
                @foreach (var c in Model)
                {
                    <div class="col-xs-2 col-centered ">
