@model IEnumerable<P4P.Models.BestellingProduct>
@using P4P.Models;
@{
    ViewBag.Title = "Orderdetails";
}

<h4 class="center">Aflevergegevens</h4>

@using (Html.BeginForm("Orderdetails", "Bestel"))
{
    <div class="form-group">
        @Html.LabelFor(m => )
        @Html.TextBoxFor(m => m.Voornaam, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Voornaam)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Achternaam)
        @Html.TextBoxFor(m => m.Achternaam, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Achternaam)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Telefoonnummer)
        @Html.TextBoxFor(m => m.Telefoonnummer, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Telefoonnummer)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Emailadres)
        @Html.TextBoxFor(m => m.Emailadres, new { @class = "form-control", disabled = "True" })
        @Html.ValidationMessageFor(m => m.Emailadres)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Wachtwoord, "Wachtwoord bevestigen")
        @Html.PasswordFor(m => m.Wachtwoord, new { @class = "form-control", required = "True" })
        @Html.ValidationMessageFor(m => m.Wachtwoord)
    </div>
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Opslaan</button>
}

<div class="table-responsive">
    <table class="table-bordered">
        <tr>
            <th>Productcode</th>
            <th>Productnaam</th>
            <th>Aantal</th>
            <th>Prijs</th>
        </tr>
        @{
            foreach (var p in Model)
            {
                <tr>
                    <td>@p.Product.Code</td>
                    <td>@p.Product.Naam</td>
                    <td>@p.Aantal</td>
                    <td>€@p.Product.Prijs</td>
                </tr>
            }
        }
    </table>
</div>
<a href="Index" class="btn">Terug</a>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

