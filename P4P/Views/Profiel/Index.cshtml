
@model P4P.Models.Gebruiker
@{
    ViewBag.Title = "Mijn profiel";
}
<link rel="stylesheet" type="text/css" href="~/Content/Index.css" media="screen" />
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<div class="row">
    <div class="col-sm-6">
        <div class="card profiel">
            <center>
                <h3>Profiel</h3>
                <h4>Een overzicht van uw gegevens</h4>
            </center>

            @using (Html.BeginForm("Index", "Profiel"))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.Voornaam)
                    @Html.TextBoxFor(m => m.Voornaam, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Voornaam)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Achternaam)
                    @Html.TextBoxFor(m => m.Achternaam, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Achternaam)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Telefoonnummer)
                    @Html.TextBoxFor(m => m.Telefoonnummer, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Telefoonnummer)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Emailadres)
                    @Html.TextBoxFor(m => m.Emailadres, new { @class = "form-control", disabled = "True" })
                    @Html.ValidationMessageFor(m => m.Emailadres)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Wachtwoord, "Wachtwoord bevestigen")
                    @Html.PasswordFor(m => m.Wachtwoord, new { @class = "form-control", required = "True" })
                    @Html.ValidationMessageFor(m => m.Wachtwoord)
                </div>
                @Html.AntiForgeryToken()
                <button id="opslaan" type="submit" class="btn btn-primary">Opslaan</button>
            }
            @Html.ActionLink("Wachtwoord wijzigen", "Wachtwoord", "Profiel", null, new { @class = "btn btn-primary" })
        </div>
    </div>
    <div class="col-sm-6">
        <div class="card profiel">
            <center>
                <h3>Contacten</h3>
            </center>

            <!--Tijdelijke dummy contacten, moet nog een foreach-->
            <ul class="collection">
                <li class="collection-item avatar">
                    <i class="material-icons circle">account_circle</i>
                    <span class="title">Brutus</span>
                    <p style="color:#4caf50;">
                        CEO of clown entertainment systems.
                    </p>
                    <a href="#!" class="secondary-content"><i class="material-icons">grade</i></a>
                </li>

                <li class="collection-item avatar">
                    <i class="material-icons circle">account_circle</i>
                    <span class="title">Sven Mark Hofstra</span>
                    <p style="color:#4caf50;">
                        Shitty programmer.
                    </p>
                    <a href="#!" class="secondary-content"><i class="material-icons">grade</i></a>
                </li>
            </ul>

        </div>
        </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $(document).ready(function () {
            @if (ViewBag.Success == "true") { 
                @:toastr.success("Opgeslagen");
            } else if (ViewBag.Success == "false") {
                @:toastr.error("@ViewBag.Errormessage");      
            }
        });
    </script>
}
