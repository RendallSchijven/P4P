@model P4P.Models.Gebruiker
@{
    ViewBag.Title = "Gegevens";
}
<link rel="stylesheet" type="text/css" href="~/Content/Index.css" media="screen" />
<center class="card profiel profiel2">
    <h3>Gegevens</h3>
    <h4>Wilt u uw gegevens controleren en waar nodig naar juistheid aanpassen?</h4>
    @using (Html.BeginForm("Gegevenscontrole", "Profiel"))
    {
        <div class="form-group tekstvak">
            @Html.LabelFor(m => m.Voornaam)
            @Html.TextBoxFor(m => m.Voornaam, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Voornaam)
        </div>
        <div class="form-group tekstvak">
            @Html.LabelFor(m => m.Achternaam)
            @Html.TextBoxFor(m => m.Achternaam, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Achternaam)
        </div>
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary">Opslaan</button>
    }
</center>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
