@model P4P.ViewModel.NewSubcategorie
@{
    ViewBag.Title = "CreateSubcategorie";
}

<h2>Nieuwe Subcategorie</h2>
<h2>Register</h2>

<p>
    @Html.ActionLink("Terug", "Details", "Categorie", new { id=Model.Hoofdcategorie.Id}, new { @class = "btn btn-primary" })
</p>
@using (Html.BeginForm("CreateSubCategorie", "Categorie", FormMethod.Post, new { id = "registerForm" }))
{
    if (ViewBag.message != null)
    {
        <h2>@ViewBag.message</h2>
    }
    <div class="form-group">
        @Html.LabelFor(m => m.Subcategorie.Naam)
        @Html.TextBoxFor(m => m.Subcategorie.Naam, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Subcategorie.Naam)
    </div>

    @Model.Hoofdcategorie.Naam
    @Html.HiddenFor(m => m.Hoofdcategorie.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Register</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $(document).ready(function () {
            @if (ViewBag.Success == "true") {
                @:toastr.success("Opgeslagen");
            } else if (ViewBag.Success == "false") {
                @:toastr.error("@ViewBag.Errormessage");
            }
        });
    </script>
}


