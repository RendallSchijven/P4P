@model P4P.Models.Hoofdcategorie
@{
    ViewBag.Title = "EditHoofdCategorie";
}

<h2>EditSubCategorie</h2>

<p>
    @Html.ActionLink("Terug", "Index", "Categorie", null, new { @class = "btn btn-primary" })
</p>
@using (Html.BeginForm("EditHoofdcategorie", "Categorie", FormMethod.Post, new { id = "registerForm" }))
{
    if (ViewBag.message != null)
    {
        <h2>@ViewBag.message</h2>
    }
    <div class="form-group">
        @Html.LabelFor(m => m.Naam)
        @Html.TextBoxFor(m => m.Naam, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Naam)
    </div>
    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Register</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

