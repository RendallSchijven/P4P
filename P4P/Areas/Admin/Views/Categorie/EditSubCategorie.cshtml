@model P4P.Models.Subcategorie
@{
    ViewBag.Title = "EditSubCategorie";
}
<link rel="stylesheet" type="text/css" href="~/Content/Index.css" media="screen" />

<div class="card card-producten card-centered">
    <h4>Subcategorie Wijzigen in @Model.Hoofdcategorie.Naam</h4>

    <p>
        <button class="btn btn-primary" onclick="goBack()">Annuleren</button>
    </p>
    @using (Html.BeginForm("EditSubCategorie", "Categorie", FormMethod.Post, new { id = "registerForm" }))
    {
        if (ViewBag.message != null)
        {
            <h2>@ViewBag.message</h2>
        }
        <div class="form-group">
            @Html.LabelFor(m => m.Naam)
            @Html.TextBoxFor(m => m.Naam, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Naam)
        </div>
        @Html.HiddenFor(m => m.Id)
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary">Wijzigen</button>
    }
    </div>
    @section scripts
{
        @Scripts.Render("~/bundles/jqueryval")
    }

