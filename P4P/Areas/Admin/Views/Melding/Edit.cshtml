@model P4P.Models.Melding
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<p>
    @Html.ActionLink("Terug", "Index", "Melding", null, new { @class = "btn btn-primary" })
</p>
@using (Html.BeginForm("Edit", "Melding", FormMethod.Post, new { id = "registerForm" }))
{
    if (ViewBag.message != null)
    {
        <h2>@ViewBag.message</h2>
    }
    <div class="form-group">
        @Html.LabelFor(m => m.Naam)
        @Html.TextBoxFor(m => m.Naam, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Naam)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Message)
        @Html.TextBoxFor(m => m.Message, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Message)
    </div>
    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Wijzigen</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
